<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/face_recognize" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓  名"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorDarkGray"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/txv_setting_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加小俊"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorGray"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="195dp"
        android:background="@color/colorWhite"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="195dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学  号"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorDarkGray"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="195dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20141001111"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorGray"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>


    <!--分割线-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="150dp"
        android:background="@color/colorGray">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="195dp"
        android:background="@color/colorGray">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="240dp"
        android:background="@color/colorGray">
    </RelativeLayout>


    <!--签到-->

    <TextView
        android:id="@+id/lesson_record"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="285dp"
            android:text="已选课程"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorDarkGray"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/enter" />

    <TextView
        android:id="@+id/check_record"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="330dp"
        android:text="签到记录"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:textColor="@color/colorDarkGray"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/enter" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="285dp"
        android:background="@color/colorGray">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="330dp"
        android:background="@color/colorGray">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="375dp"
        android:background="@color/colorGray">
    </RelativeLayout>



    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:shadowColor="@color/colorWhite"
        android:text="退出登录"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/rect_button_logout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
